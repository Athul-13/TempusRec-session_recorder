  "include": [
    ".plasmo/index.d.ts",
    "./**/*.js",
    "./**/*.jsx"
  ],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "paths": {
      "~*": ["./*"]
    },
    "baseUrl": "."
  }
}
